<Recorder>:

    data_graph: pupil_data_graph

    BoxLayout:
        
        orientation: "vertical"
        padding: [10,10,10,10]        


        #Control Buttons
        BoxLayout:
            size_hint: [1, .06]
            orientation: "horizontal"
            spacing: 5
            padding: [0,5,0,5]
            Button:
                text: "START"
                bold: True
                on_press: root.start()
            Button:
                text: "STOP"
                bold: True
                on_press: root.stop()
            Button:
                text: "SAVE"
                bold: True
            Label:
                text: '//'
            Button:
                text: "Settings"
                bold: True
                on_press: app.open_settings()
            Button:
                text: "QUIT"
                bold: True
                on_press: root.quit_app()


        #Data Chart
        BoxLayout:
            size_hint: [1, .6]
            Graph:
                id: pupil_data_graph
                xlabel: "Time"
                ylabel: "Pupil Size"
                x_grid: True
                y_grid: True
                ymax: 10
                xmax: root.recLength
                x_ticks_minor: 5
                x_ticks_major: 25
                
                y_ticks_major: 0.5
                background_color: [1,1,1,.3]
            

        #Inputs Setup Pannel 
        BoxLayout:
            size_hint: [1, .34]
            orientation: "horizontal"
            
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: [1,.2]
                    padding: [10,10,10,10]
                    Label:
                        text: str("ZMQ: " + root.zmqStatus)
                    Button:                        
                        size_hint: [0.3,1]
                        text: 'Connect'
                        disabled: 'True'
                Label:
                    size_hint: [1, .8]
                    text_size: self.size
                    halign: 'left'
                    valign: 'top'
                    text: 'Log...\nLog...'
            
            BoxLayout:
                orientation: "vertical"                
                Label:
                    font_size: 16
                    width: self.width
                    text: str("OSC: " + root.oscStatus)
            
            BoxLayout:
                orientation: "vertical"    
                Label:
                    font_size: 16
                    width: self.width
                    text: str("Serial: " + root.serStatus)